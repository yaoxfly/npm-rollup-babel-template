{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./",
    "target": "es5", //有用ts插件(tsc)打包当前target才会生效
    "checkJs": true,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node", //模块解析方式
    "removeComments": true, // 删除编译后的所有的注释
    "esModuleInterop": true, //允许通过es6语法引入commonjs模块
    "resolveJsonModule": true, //解析json模块--不设置某些块会引入会报错
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "paths": {
      "tslib": ["bower_components/tslib/tslib.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "rollup.config.mjs"],
  "files": ["./src/index.ts"]
}

{
  "presets": [
    [
      "@babel/preset-env",
      {
        // npx browserslist "> 0.1%, last 2 versions,Firefox ESR,not ie < 11" 通过当前命令查询
        "targets": "> 0.1%, last 2 versions,Firefox ESR,not ie < 11",
        //支持最小环境版本构成的对象
        // "targets": {
        //   "edge": "17",
        //   "firefox": "60",
        //   "chrome": "67",
        //   "safari": "11.1",
        //   "ie": "11"
        // },
        // "useBuiltIns": "usage", //自动按需引入全局regeneratorRuntime函数
        // "corejs": "3.6.5", // 自动按需引入全局polyfill
        "modules": false,
        "loose": true
      },
      "@babel/preset-typescript"
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "helpers": true,
        "corejs": 3, //类似@babel/polyfill（会重写了window.Promise及其原型链）的作用，但不会在引入 API 的同时污染全局环境。
        "regenerator": true, //自动按需引入非全局 regeneratorRuntime 函数
        "useESModules": false
      }
    ]
  ]
}
